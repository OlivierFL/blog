{% extends 'base.html.twig' %}

{% block title %}
  Liste des articles du blog
{% endblock %}

{% block body %}
  <div class="hero-img">
    <div class="hero-text text-center">
      <h1>Articles</h1>
      <hr class="separator-white">
    </div>
  </div>
  <div class="container">
    <section class="m-60 mb-5 text-center">
      <h2>Toutes les news</h2>
      <hr class="separator-blue">
      <div class="row justify-content-between">
        {% for post in posts %}
          <article class="col-lg-4 col-md-6 p-3 mb-3 articles">
            <a href="/posts/{{ post.slug }}">
              <img class="img-fluid img-news" src="uploads/{{ post.cover_img }}"
                   alt="{{ post.alt_cover_img }}">
              <div class="hero-text bg-orange p-4">
                <h3>{{ post.title }}</h3>
                <p>Lire plus</p>
              </div>
            </a>
          </article>
        {% endfor %}
      </div>
    </section>
    <nav class="mb-5" aria-label="Pagination articles">
      <ul class="pagination justify-content-center">
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Previous">
            <i class="fa fa-chevron-left"></i>
          </a>
        </li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Next">
            <i class="fa fa-chevron-right"></i>
          </a>
        </li>
      </ul>
    </nav>
  </div>
{% endblock %}
