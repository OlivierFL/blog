{% extends 'base.html.twig' %}

{% block title %}
  Connexion
{% endblock %}

{% block body %}
  <div class="container">
    <section class="m-60 text-center row justify-content-around">
      <div class="text">
        <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
        <hr class="separator-blue">
        <a href="/signup" class="black">Nouvel utilisateur ? Cliquez ici pour vous inscrire</a>
        <form class="form-signin" method="post">
          <label for="email" class="sr-only">Adresse email</label>
          <input type="email" id="email" class="form-control mb-3" placeholder="Adresse email">
          <label for="password" class="sr-only">Mot de passe</label>
          <input type="password" id="password" class="form-control mb-3" placeholder="Mot de passe">
          <button class="btn btn-lg btn-primary btn-block" type="submit">Se connecter</button>
        </form>
      </div>
    </section>
  </div>
{% endblock %}
