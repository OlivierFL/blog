<nav class="mb-5" aria-label="Pagination articles">
  <ul class="pagination justify-content-center">
    <li class="page-item">
      {% if previous <= 0 %}
        <span class="page-link disabled text-muted">
        <i class="fa fa-chevron-left"></i>
      </span>
      {% elseif previous == 1 %}
        <a class="page-link" href="/posts" aria-label="Previous">
          <i class="fa fa-chevron-left"></i>
        </a>
      {% else %}
        <a class="page-link" href="/posts/{{ previous }}" aria-label="Previous">
          <i class="fa fa-chevron-left"></i>
        </a>
      {% endif %}
    </li>
    {% for i in 1..max_pages %}
      {% if i == 1 %}
        <li class="page-item {% if page == 1 %}active{% endif %}">
          <a href="/posts" class="page-link">{{ i }}</a>
        </li>
      {% else %}
        <li class="page-item {% if i == page %}active{% endif %}">
          <a class="page-link" href="/posts/{{ i }}">{{ i }}</a>
        </li>
      {% endif %}
    {% endfor %}
    <li class="page-item">
      {% if next > max_pages %}
        <span class="page-link disabled text-muted">
        <i class="fa fa-chevron-right"></i>
      </span>
      {% else %}
        <a class="page-link" href="/posts/{{ next }}" aria-label="Next">
          <i class="fa fa-chevron-right"></i>
        </a>
      {% endif %}
    </li>
  </ul>
</nav>
