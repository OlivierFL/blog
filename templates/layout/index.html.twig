{% extends 'base.html.twig' %}

{% block title %}
  Olivier Floch - Développeur web PHP/Symfony
{% endblock %}

{% block body %}
  {% if messages is not empty %}
    {% for message in messages %}
      <h2>{{ message }}</h2>
    {% endfor %}
  {% endif %}
  <div class="hero-img">
    <div class="hero-text text-center">
      <h1>Olivier Floch</h1>
      <hr class="separator-white">
      <h2>Développeur PHP/Symfony</h2>
    </div>
  </div>
  <div class="container">
    <section class="m-60 text-center">
      <h2>À propos</h2>
      <hr class="separator-blue">
      <p class="text-justify">{{ description|nl2br }}</p>
    </section>
    <section class="m-60 text-center">
      <h2>Les dernières news</h2>
      <hr class="separator-blue">
      <div class="row justify-content-between">
        {% for post in posts %}
          <article class="col-lg-4 col-md-6 p-3 mb-3 articles">
            <a href="/posts/{{ post.slug }}">
              <img class="img-fluid img-news" src="uploads/{{ post.cover_img }}"
                   alt="{{ post.alt_cover_img }}">
              <div class="hero-text bg-orange p-4">
                <h3>{{ post.title }}</h3>
                <p>Lire plus</p>
              </div>
            </a>
          </article>
        {% endfor %}
      </div>
    </section>
    <section class="my-5 text-center row justify-content-center align-items-center">
      <div class="col-lg-6">
        <h2>Formulaire de contact</h2>
        <hr class="separator-blue">
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusantium aliquam aut dolor ea eius excepturi
          exercitationem illo molestias quos soluta.</p>
        <form class="mb-5" action="#" method="post">
          <div class="form-group">
            <label class="col-form-label sr-only" for="first-name">Nom</label>
            <input type="text" class="form-control" id="first-name" placeholder="Nom">
          </div>
          <div class="form-group">
            <label class="col-form-label sr-only" for="last-name">Prénom</label>
            <input type="text" class="form-control" id="last-name" placeholder="Prénom">
          </div>
          <div class="form-group">
            <label class="col-form-label sr-only" for="email">Email</label>
            <input type="email" class="form-control" id="email" placeholder="Email">
          </div>
          <div class="form-group">
            <label class="col-form-label sr-only" for="subject">Objet</label>
            <input type="text" class="form-control" id="subject" placeholder="Objet">
          </div>
          <div class="form-group">
            <label class="col-form-label sr-only" for="message">Message</label>
            <textarea class="form-control" id="message" placeholder="Votre message..." rows="6"></textarea>
          </div>
          <button type="submit" class="btn btn-primary w-100">Envoyer</button>
        </form>
      </div>
      <div class="col-lg-4 offset-lg-2 text-center">
        <div class="card card-dotted-border">
          <div class="card-body">
            <h3>Télécharger le CV</h3>
            <hr class="separator-blue">
            <a href="#" class="black">download</a>
          </div>
        </div>
      </div>
    </section>
  </div>
{% endblock %}
