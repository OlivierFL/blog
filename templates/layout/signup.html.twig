{% extends 'base.html.twig' %}

{% block title %}
  Inscription
{% endblock %}

{% block body %}
  <div class="container">
    <section class="m-60 text-center row justify-content-around">
      <div class="text">
        <form class="form-signin" method="post">
          <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
          <hr class="separator-blue">
          <label for="lastname" class="sr-only">Nom</label>
          <input type="text" id="lastname" class="form-control mb-3" placeholder="Nom">
          <label for="firstname" class="sr-only">Prénom</label>
          <input type="text" id="firstname" class="form-control mb-3" placeholder="Prénom">
          <label for="username" class="sr-only">Nom d'utilisateur</label>
          <input type="text" id="username" class="form-control mb-3" placeholder="Nom d'utilisateur">
          <label for="email" class="sr-only">Adresse email</label>
          <input type="email" id="email" class="form-control mb-3" placeholder="Adresse email">
          <label for="password" class="sr-only">Mot de passe</label>
          <input type="password" id="password" class="form-control mb-3" placeholder="Mot de passe">
          <button class="btn btn-lg btn-primary btn-block" type="submit">S'inscrire</button>
        </form>
      </div>
    </section>
  </div>
{% endblock %}
