{% extends 'admin/admin_layout.html.twig' %}


{% block admin_body %}
  <div class="container">
    <section class="my-5">
      <form id="post_form">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="author">Auteur</label>
            <input type="text" class="form-control" id="author" placeholder="Olivier Floch">
          </div>
          <div class="form-group col-md-6">
            <label for="title">Titre</label>
            <input type="text" class="form-control" id="title" placeholder="Titre du post">
          </div>
        </div>
        <div class="form-group mb-5">
          <label for="content">Contenu</label>
          <textarea class="form-control" id="title" placeholder="Contenu du post" form="post_form"
                    name="post_content" rows="4" cols="50"></textarea>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <div class="custom-file">
              <input type="file" class="custom-file-input" id="file">
              <label class="custom-file-label" for="file">Téléverser une image de couverture</label>
            </div>
          </div>
        </div>
        <div class="row justify-content-around justify-content-md-end my-5">
          <a href="/admin/posts" class="btn btn-danger mr-md-3 mb-4">
            <i class="fas fa-times"></i>
            Annuler
          </a>
          <button type="submit" class="btn btn-success mb-4">
            <i class="fas fa-check"></i>
            Valider
          </button>
        </div>
      </form>
    </section>
  </div>
{% endblock %}
