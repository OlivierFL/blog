{% extends 'admin/admin_layout.html.twig' %}


{% block admin_body %}
  <div class="container">
    <section class="my-5">
      <form id="post_form">
        <div class="form-group">
          <label for="author">Auteur</label>
          <input type="text" class="form-control" id="author" placeholder="Olivier Floch">
        </div>
        <div class="form-group">
          <label for="comment_content">Contenu du commentaire</label>
          <textarea class="form-control" id="comment_content" placeholder="Contenu du commentaire" form="post_form"
                    name="comment_content" rows="4" cols="50"></textarea>
        </div>
        <div class="row justify-content-around justify-content-md-end my-5">
          <a href="/admin/comments" class="btn btn-edit mr-md-3 mb-4">
            <i class="fas fa-chevron-left"></i>
            Retour
          </a>
          <button type="submit" class="btn btn-danger mr-md-3 mb-4">
            <i class="fas fa-times"></i>
            Refuser le commentaire
          </button>
          <button type="submit" class="btn btn-success mb-4">
            <i class="fas fa-check"></i>
            Valider le commentaire
          </button>
        </div>
      </form>
    </section>
  </div>
{% endblock %}
