{% extends 'admin/admin_layout.html.twig' %}


{% block admin_body %}
  <div class="container">
    <div class="text-center">
      {{ include('_messages.html.twig') }}
    </div>
    <section class="my-5">
      <form id="form-comment-edit"
            method="post"
            action="/admin/comments/edit/{{ comment.id }}"
      >
        <div class="form-group">
          <label for="author">Auteur</label>
          <input type="text"
                 class="form-control"
                 id="author"
                 name="author"
                 value="{{ comment.first_name|capitalize }} {{ comment.last_name|capitalize }}"
                 placeholder="{{ comment.fist_name|capitalize }} {{ comment.last_name|capitalize }}"
                 disabled
          >
        </div>
        <div class="form-group">
          <label for="content">Contenu du commentaire</label>
          <textarea class="form-control"
                    id="content"
                    name="content"
                    rows="4"
                    cols="50"
                    placeholder="{{ comment.content }}"
                    disabled
          >{{ comment.content|nl2br }}</textarea>
        </div>
        <div class="row justify-content-around justify-content-md-end my-5">
          <a href="/admin/comments" class="btn btn-edit mr-md-3 mb-4">
            <i class="fas fa-chevron-left"></i>
            Retour
          </a>
          <input type="submit"
                 class="btn btn-danger mr-md-3 mb-4"
                 id="reject-button"
                 form="form-comment-edit"
                 name="reject"
                 value="Refuser le commentaire"
          >
          <input type="submit"
                 class="btn btn-success mb-4"
                 id="approve-button"
                 form="form-comment-edit"
                 name="approve"
                 value="Valider le commentaire"
          >
        </div>
      </form>
    </section>
  </div>
{% endblock %}
