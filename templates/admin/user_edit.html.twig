{% extends 'admin/admin_layout.html.twig' %}


{% block admin_body %}
  <div class="container">
    <section class="my-5">
      <form id="post_form">
        <div class="form-row mb-4">
          <div class="form-group col-md-4">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" class="form-control" id="username" placeholder="username 1">
          </div>
          <div class="form-group col-md-4">
            <label for="last_name">Nom</label>
            <input type="text" class="form-control" id="last_name" placeholder="Floch">
          </div>
          <div class="form-group col-md-4">
            <label for="first_name">Prénom</label>
            <input type="text" class="form-control" id="first_name" placeholder="Olivier">
          </div>
        </div>
        <div class="form-group mb-5">
          <label for="role">Rôle</label>
          <div class="form-row">
            <div class="custom-control custom-radio custom-control-inline">
              <input type="radio" id="role_user" name="role" class="custom-control-input">
              <label class="custom-control-label" for="role_user">User</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
              <input type="radio" id="role_admin" name="role" class="custom-control-input">
              <label class="custom-control-label" for="role_admin">Admin</label>
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <div class="custom-file">
              <input type="file" class="custom-file-input" id="file">
              <label class="custom-file-label" for="file">Téléverser un fichier</label>
            </div>
          </div>
          <div class="form-group col-md-6">
            <div class="custom-file">
              <input type="file" class="custom-file-input" id="file">
              <label class="custom-file-label" for="file">Téléverser une photo de profil</label>
            </div>
          </div>
        </div>
        <div class="row justify-content-around justify-content-md-end my-5">
          <a href="/admin/users" class="btn btn-danger mr-md-3 mb-4">
            <i class="fas fa-times"></i>
            Annuler
          </a>
          <button type="submit" class="btn btn-success mb-4">
            <i class="fas fa-check"></i>
            Valider
          </button>
        </div>
      </form>
    </section>
  </div>
{% endblock %}
