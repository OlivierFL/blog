<div class="modal fade" id="deleteModal" data-backdrop="static" data-keyboard="false" tabindex="-1"
     aria-labelledby="deleteModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-danger" id="deleteModalLabel">
          <i class="fas fa-trash-alt"></i>
          Suppression
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Confirmer la suppression de "<span class="item-info"></span>"&nbsp;?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-edit" data-dismiss="modal">Annuler</button>
        {% if users is defined or user is defined %}
          {{ include('admin/_form_user_delete.html.twig') }}
        {% elseif posts is defined or post is defined %}
          {{ include('admin/_form_post_delete.html.twig') }}
        {% elseif social_networks is defined or social_network is defined %}
          {{ include('admin/_form_social_networks_delete.html.twig') }}
        {% endif %}
      </div>
    </div>
  </div>
</div>
